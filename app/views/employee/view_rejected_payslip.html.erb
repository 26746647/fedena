<div id="content-header">
   <img src="/images/HR/show_hr.png" alt="" />
  <h1> Rejected Payslip</h1>
  <h3>Individual Employee</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>



<div id="page-yield">

    <div class="drop-down-box">
      <label for="category_prefix">Select payslip Month & Year</label>
      <div class="text-input-bg"> <%= select :employee, :rejected_payslip, @payslips.map { |s| [s.salary_date.strftime("%B %Y"), s.salary_date] },
          {:prompt => "Select a month"},
          {:onChange => "#{remote_function(:url => {:action => "update_rejected_payslip"},
                                           :with => "'salary_date='+value+'&emp_id='+#{params[:id]}")}"} %> </div>
    </div>
    <div class="extender"></div>
    <div id="rejected_payslip"></div>
</div>