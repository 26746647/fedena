<div id="content-header">
  <img src="/images/show_finance.png" alt="" />
  <h1><%= t('index.donations') %></h1>
  <h3><%= t('index.donation_receipt') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">

    <div class="field1"><%= t('donation.donor') %>:</div>
    <div class="val"> <%= @donation.donor %></div>

    <div class="field1"><%= t('index.description') %>: </div>
    <div class="val"><%= @donation.description %></div>

    <div class="field1"><%= t('layouts.common.amount') %>: </div>
    <div class="val"><%= @donation.amount %></div>
    <div class="field1"><%= t('donation.transaction_id') %>: </div>
    <div class="val"><%= @donation.transaction_id unless @donation.transaction_id.nil? %></div>
    <div class="submit_button">
      <%= link_to "â–º #{t('fees_submission_index.print_receipt')}", {:action => 'donation_receipt_pdf', :id => @donation.id}, :format => 'pdf', :target => '_blank' %>
    </div>
  </div>
</div>