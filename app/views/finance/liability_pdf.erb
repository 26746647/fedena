<div id="page-yield">

  <div class="hor_line"></div>
  <h2>Liabilities Report</h2>
  <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">
    <% total_amount = 0 %>
    <div id="pdf-info">
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="table-header"><td class="col-pdf">Sl no.</td><td class="col-pdf"> Asset </td><td class="col-pdf"> Created At </td><td class="col-pdf"> Total Amount </td></tr>
        <% i = 0  %>
        <% c= 'even' %>
        <% @liabilities.each do |l| %>
          <% if l.is_solved? %>
            <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
              <td class="col-pdf"><%= i+=1 %></td>
              <td class="col-pdf"><%= l.title+" ( solved )" %></td>
              <td class="col-pdf"><%= l.created_at.strftime("%d-%m-%Y") %></td>
              <td class="col-pdf"><%= @currency_type + " "%><%= l.amount%></td>
            </tr>
          <% else %>
            <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
              <td class="col-pdf"><%= i+=1 %></td>
              <td class="col-pdf"><%= l.title %></td>
              <td class="col-pdf"><%= l.created_at.strftime("%d-%m-%Y") %></td>
              <td class="col-pdf"><%=  @currency_type + " "%><%= l.amount%></td>
            </tr>
          <% end %>
          <% total_amount+= l.amount%>
        <% end %>
        <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
          <td class="col-pdf" colspan="3"><%= 'Grand Total' %></td>
          <td class="col-pdf" colspan="1"><%=  @currency_type + " "%><%= total_amount%></td>
        </tr>
      </table>
    </div>

  </div>

</div>
