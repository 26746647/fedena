<div class="info">
  <div class="name"><%= t('fees_submission_index.fee_collection_name') %></div><div class="val"><span>:</span><%= @fee_collection.name %></div>
  <div class="name"><%= t('fees_submission_index.fee_category_name') %></div><div class="val"><span>:</span><%= @fee_category.name %></div>
  <div class="name"><%= t('layouts.default.start_date') %></div><div class="val"><span>:</span><%= @fee_collection.start_date %></div>
<div class="name"><%= t('layouts.default.end_date') %></div><div class="val"><span>:</span><%= @fee_collection.end_date %></div>
<div class="name"><%= t('additional_fees_create.message_body_part6') %></div><div class="val"><span>:</span><%= @fee_collection.due_date %></div>
<div class="extender"></div>
</div>
<% total_fees =0 %>
<% unless @fee_particulars.nil? %>
  <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td>Sl no.</td>
      <td><%= t('master_fees.particulars') %></td>
      <td><%= t('layouts.default.amount') %>  (<%= currency %>  )</td>
    </tr>
    <tr class="tr-blank"></tr>
    <% @fee_particulars.each_with_index do |fee,i| %>
      <tr class="tr-<%= cycle("odd","even") %>">
        <td class="col-1"><%= i+1 %></td>
        <td class="col-2"><%= shorten_string(fee.name,20) %></td>
        <td class="col-6"><%= fee.amount%></td>
      </tr>
      <% total_fees += fee.amount %>
    <% end %>
    <tr class="tr-blank"></tr>
    <tr class="tr-blank"></tr>
    <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
      <td class="col-1" ><%= t('fees_submission_index.total_fees') %></td>
      <td class="col-1" ></td>
      <td class="col-6" ><%= total_fees%></td>
    </tr>
  </table>
<% end %>
<%= link_to t('layouts.default.pdf_report'),{:action => "pdf_fee_structure",:id => @student.id,:id2=>@fee_collection.id},:class => 'user_button'%>