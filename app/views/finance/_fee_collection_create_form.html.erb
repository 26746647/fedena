<label class="head_label"><%=  t('fee_collection_new.set_fee_collection_date') %> <span></span></label>

<% form_remote_for @finance_fee_collection,
  :url => {:action => 'fee_collection_create'} do |form| %>

<div id="form-errors"></div>
<div class="label-field-pair">
  <label for="reason"> <%= t('fee_collection_new.fee_category') %>:</label>
    <div class="text-input-bg">
      <%= form.select(:fee_category_id, @fee_categories.map { |item| [item.name, item.name] },
      {:prompt => "#{ t('fee_collection_new.select_category')}" },
      {:onchange => "#{remote_function(:url => {:action => "fee_collection_batch_update"}, :with => "'id='+value")}"})
      %></div>
  </div>
  <div id ="batchs"></div>
  <div class="label-field-pair">
    <label for="reason">  <%= t('fee_collection_new.fee_collection_name') %>:</label>
    <div class="text-input-bg"><%= form.text_field :name%></div>
  </div>
  <div class="label-field-pair">
    <label for="reason">  <%= t('layouts.default.start_date') %>:</label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'finance_fee_collection[start_date]', I18n.localize(Date.today, :format=>:default) %></div>
  </div>
  <div class="label-field-pair">
    <label for="reason">  <%= t('layouts.default.end_date') %>:</label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'finance_fee_collection[end_date]', I18n.localize(Date.today, :format=>:default) %></div>
  </div>
  <div class="label-field-pair">
    <label for="reason">  <%= t('fee_collection_new.due_date') %>:</label>
    <div class="text-input-bg"><%= calendar_date_select_tag 'finance_fee_collection[due_date]', I18n.localize(Date.today, :format=>:default) %></div>
  </div>

  <div class="extender"></div>
  <div id="submit-button">
      <%=  submit_tag "â–º #{t('layouts.default.create')}",:class=>'submit_button' %>
  </div>
<% end %>
