<div id="content-header">
  <img src="/images/show_finance.png" alt="" />
  <h1>Master Category</h1>
  <h3>Finance Management</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  <div id="message"></div>

  <div class="box">
  <div class="link-box">
    <div class="link-heading">
     <%= link_to_remote 'Create Category', :url => { :action => 'master_category_new'} %>
    </div>
    <div class="link-descr"> Creates Master Category</div>
  </div>

  <div class="link-box">
    <div class="link-heading">
      <%= link_to_remote 'Create Particulars', :url => { :action => 'fees_particulars_new'} %>
    </div>
    <div class="link-descr"> Create particulars</div>
  </div>

  <div id="modal-box" style="display:none;"></div>
  <%= @a %>


  <div id="batch">
    <div class="label-field-pair"><label>Select a batch : </label>
      <div class="text-input-bg"> <%= select("id",:id,@batchs.map { |c| [c.full_name, c.id] },
        {:prompt => "Select a batch"},
        {:onChange => "#{remote_function(:url => {:action => "show_master_categories_list"}, :with => "'id='+value")}"})%> </div>
  </div>
  </div>
  <div id="fee_collection_dates"></div>
  <%#= render :partial => "master_category_list" %>
  <div id="categories"></div>
</div>
  </div>