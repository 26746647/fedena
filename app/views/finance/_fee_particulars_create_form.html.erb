   </div>
   <div class="label-field-pair2">
    <div class="label-container2"><label><%= t('master_fees.create_using') %></label></div>
    <div class="input-container2">
      <div class="opt"><%= radio_button("particulars","select","all",:checked => true) %><%= t('layouts.default.all') %></div>
     <!-- <div class="opt"><%#radio_button("particulars","select","student",
        {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
          :with => "'select_value='+value")}"}) %> Admission No </div> -->
      <div class="opt"> <%= radio_button("particulars","select","category",
        {:onchange => "#{remote_function(:url => {:action => "student_or_student_category"},
              :with => "'select_value='+value")}"}) %><%= t('finance.fees_submission_index.student_category') %> </div>
    </div>
   </div>


  <div id="student"></div>

  <div class="label-field-pair">
    <div class="label-container"><%= f.label :"#{t('layouts.default.amount')}" %></div>
    <div class="input-container"> <%= f.text_field :amount %></div>
   </div>


  <%=  submit_tag "â–º #{t('layouts.default.create')}",:class=>'submit_button' %>

<% end %>
</div>