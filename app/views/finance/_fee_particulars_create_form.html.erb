<label class="head_label"><%= t('layouts.default.create') %> <%= t('master_fees.particulars') %> <%= t('layouts.default.for') %> <%= t('fees_create.master') %> <%= t('index.fees') %> <%= t('layouts.default.category') %><span></span></label>


<div id="grading-levels-form">

  <% form_remote_for  @finance_fee_particulars,:url =>{:action => 'fees_particulars_create'}  do |f| %>

    <div id="form-errors"></div>

    <div class="label-field-pair">
      <div class="label-container"><label><%= t('index.fees') %> <%= t('fees_create.master') %> <%= t('layouts.default.category') %></label> </div>
    <div class="input-container"><%= f.select :finance_fee_category_id, @fees_categories.map { |c| ["#{c.name} - #{c.batch.full_name}", c.id] },:selected=>params[:category_id].to_i%></div>
   </div>

  <div class="label-field-pair">
    <div class="label-container"> <%= f.label :"#{t('layouts.default.name')}"  %></div>
    <div class="input-container"><%= f.text_field :name %></div>
   </div>

   <div class="label-field-pair">
    <div class="label-container"><%= f.label :"#{t('layouts.default.description')}" %></div>
