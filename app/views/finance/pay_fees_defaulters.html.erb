<div id="content-header">
  <img src="/images/show_finance.png" alt="" />
  <h1>Fees Submission</h1>
  <h3><%= @student.full_name %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="page-yield">

  <div class="name">Fees Receipt Number</div><div class="val"><span>:</span>F<%= @financefee.id %></div>
  <% unless @fee_category.nil? %>
    <div class="name">Fee Category Name</div><div class="val"><span>:</span><%= @fee_category.name %></div>
  <% end %>
  <% unless @student.student_category.nil? %>
    <div class="name">Student Category</div><div class="val"><span>:</span><%= @student.student_category.name %></div
  <% else %>
    <div class="name">Student Category</div><div class="val"><span>:</span>N.A</div>
  <% end %>

  <% total_fees =0 %>
  <%if @financefee.transaction_id.nil? %>
    <%= render :partial=> 'defaulters_fine_submission' %>
  <% end %>
  <% form_for :fees, :url => {:action => 'pay_fees_defaulters', :student => @student.id,:date => @date.id, :fine => @fine} do |form| %>
    <% unless @fee_particulars.nil? %>


      <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
        <tr class="tr-head">
          <td>Sl no.</td>
          <td>Particulars</td>
          <td>Amount (<%= currency %>  )</td>
        </tr>
        <tr class="tr-blank"></tr>
        <% @fee_particulars.each_with_index do |fee,i| %>
          <tr class="tr-<%= cycle("odd","even") %>">
            <td class="col-1"><%= i+1 %></td>
            <td class="col-2"><%= shorten_string(fee.name,20) %></td>
            <td class="col-6"><%= fee.amount%></td>
          </tr>
          <% total_fees += fee.amount %>
        <% end %>
        <% unless @fine.nil? %>
          <tr class="tr-<%= cycle("odd","even") %>">
            <td class="col-1"><%= @fee_particulars.size+1 %></td>
            <td class="col-2">Fine</td>
            <td class="col-6"><%= @fine %></td>
          </tr>
          <% total_fees += @fine.to_f %>
        <% end %>
        <% unless @paid_fees.nil? %>
          <% paid = 0 %>
          <% @paid_fees.each_with_index do |p,i| %>
            <% paid += p.amount.to_f %>
            <tr class="tr-<%= cycle("odd","even") %>">
              <td class="col-1"><%= @fee_particulars.size+1+i %></td>
              <td class="col-2">Partial Payment on <%= p.transaction_date %></td>
              <td class="col-6">-<%= p.amount.to_f %></td>
            </tr>
          <% end %>
          <% total_fees -= paid %>
        <% end %>

        <% unless @financefee.transaction_id.nil? %>

          <% @trans = FinanceTransaction.find_by_id(@financefee.transaction_id) %>
          <% unless @trans.nil? %>
            <% if @trans.fine_included %>
              <tr class="tr-<%= cycle("odd","even") %>">
                <td class="col-1"><%= @fee_particulars.size+@paid_fees.size+1 %></td>
                <td class="col-2">Fine</td>
                <td class="col-6"><%= @trans.fine_amount %></td>
              </tr>
              <% total_fees += @trans.fine_amount.to_f %>
            <% end %>
          <% end %>
        <% end %>
        <tr class="tr-blank"></tr>
        <tr class="tr-blank"></tr>
        <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
          <td class="col-1" >Amount to pay</td>
          <td class="col-1" ></td>
          <td class="col-6" ><%= total_fees%></td>
        </tr>

        <tr>
          <td colspan="3">
            <div class="pay_fees">
              <%unless total_fees.to_f ==0 %>
                <div class="label-field-pair2">
                  <label>Amount :</label>
                  <div class="text-input-bg2"><%= form.text_field :fees_paid, :value=>total_fees %>
                  </div>
                </div>
                <%= submit_tag "► Pay Fees",:class=>'submit_button' %>
              <% else %>
                <h4>Fees Paid</h4>
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <% unless @paid_fees.nil? or not total_fees.to_f == 0 %>
              <%= link_to "► Print receipt",
                {:controller => "finance", :action => "student_fee_receipt_pdf", :id => @student.id, :id2=>@date.id},:target => '_blank', :class=> 'user_button' %>
            <% end %>
          </td>
        </tr>
      </table>
    <%end%>
  <%end%>
</div>