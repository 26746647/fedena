<% @students.in_groups_of(15,false).each do |students| %>
  <div class="page">
    <div class="hor_line"></div>
    <h2>Student-Advanced search</h2>
    <div class="hor_line"></div>

    <div class="extender"> </div>

    <div id ="main_info">
      <h4> <%= "Students Listed by "+@searched_for.downcase %></h4>
    </div>
    <div class="report">
      <table id="pdf-table" width="100%" cellspacing="0">
        <% c= 'odd' %>
        <tr class="table-header"><td class="col-pdf">Sl no.</td><td class="col-pdf">Name</td><td class="col-pdf"> Batch</td><td class="col-pdf">Admission Number</td><td class="col-pdf">Date Of Birth</td></tr>
        <% students.each.each_with_index do |student,i| %>
          <tr class="<%= cycle((["odd","even"]-[c]).first,c) %>">
            <td class="col-pdf"><%= i+1 %></td>
            <td class="col-pdf"><%= student.full_name %></td>
            <td class="col-pdf"><%= student.batch.full_name %></td>
            <td class="col-pdf"><%= student.admission_no %></td>
            <td class="col-pdf"><%= student.date_of_birth.strftime("%d %b, %Y") %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>


