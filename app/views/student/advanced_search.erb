<div id="content-header">
  <img src="/images/student_details/student_details_logo.jpg" />
  <h1><%= t('student_text') %></h1>
  <h3><%= t('advanced_search') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <div class="show-msg"><div class="flash-msg"><%= flash[:notice] %></div> </div>
  <% end %>
  <div id="search-form">
    <% form_for @search do |f| %>
      <div class="label-field-pair">
        <label for="name"><%= t('name') %></label>
        <div class="text-input-bg">
          <%= f.text_field :first_name_or_middle_name_or_last_name_like %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="student_admission_no"><%= t('admission_number') %></label>
        <div class="text-input-bg">
          <%= f.text_field :admission_no_equals %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="student_course"><%= t('course_text') %><%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none;" ) %></label>
        <div class="text-input-bg">
          <%= select :advv_search, :course_id, Course.active.map{|c| [c.course_name+" "+c.section_name, c.id]},
            {:prompt=>"#{t('select_a_course')}"},
            {:onChange => "#{remote_function(:url => {:action => "list_batches"},
            :with => "'course_id='+value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"
            )}"}%>
        </div>
      </div>
      <div class="label-field-pair" id="course_batches">
        <label for="student_batch"><%= t('batch') %></label>
        <div class="text-input-bg" >
          <%= select :search,:batch_id_equals, @batches.map{|c| [c.name, c.id]},{:prompt=>"#{t('select_batch')}"}%>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="student_category"><%= t('category') %></label>
        <div class="text-input-bg">
          <%= f.collection_select :student_category_id_equals,StudentCategory.active,:id,:name,{:prompt=>"#{t('select_category')}"}%>
        </div>
      </div>
      <div class="label_field_pair">
        <label class="label_for_student" for="student_gender"><%= t('gender') %></label>
        <div class="student_gender_value">
          <%= f.radio_button  :gender_equals, "" %>
          <label class="label_for_gender" for="student_gender_true"><%= t('all') %></label>
          <%= f.radio_button  :gender_equals, "m"%>
          <label class="label_for_gender" for="student_gender_false"><%= t('male') %></label>
          <%= f.radio_button  :gender_equals, "f" %>
          <label class="label_for_gender" for="student_gender_false"><%= t('female') %></label>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="student_blood_group"><%= t('blood_group') %></label>
        <div class="text-input-bg">
          <%= select :search, :blood_group_like, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"],{:prompt=>"#{t('select')}"}%>
        </div>
      </div>

      <div class="label-field-pair">
        <label for="student_country">
          <%= t('country') %>
        </label>
        <div class="text-input-bg">
          <%= f.collection_select :nationality_id_equals, Country.all,:id,:name,{:prompt=>"#{t('select')}"}%>
        </div>
      </div>

      <div class="label-field-pair">
        <label for="student_grade"><%= t('admission_date') %></label>
        <div class="text-input-bg">
          <%= select :advv_search,:doa_option,["#{t('equal_to')}","#{t('less_than')}","#{t('greater_than')}"],{:prompt=>"#{t('option')}"},
            {:onChange => "#{remote_function(:url => {:action => "list_doa_year"},
            :with=>"'doa_option='+value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')"
            )}"}
        %>
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none;" ) %>
          <div id="doa_year">
            <%= select :advv_search,:doa_year,[],{:prompt=>"#{t('select')}"} %>
          </div>
          <div id="doa_year_hidden"></div>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="student_birth_date"><%= t('birth_date') %></label>
        <div class="text-input-bg">
          <%= select :advv_search,:dob_option,["#{t('equal_to')}","#{t('less_than')}","#{t('greater_than')}"],{:prompt=>"#{t('option')}"},
            {:onChange => "#{remote_function(:url => {:action => "list_dob_year"},
            :with=>"'dob_option='+value",
            :before => "Element.show('loader')",
            :success => "Element.hide('loader')",
            :class=>'small-box'
            )}"}
        %>
          <%= image_tag("loader.gif",
            :align => "absmiddle",
            :border => 0,
            :id => "loader",
            :style =>"display: none;" ) %>
          <div id="dob_year">
            <%= select :advv_search,:dob_year,[],{:prompt=>"#{t('select')}"} %>
          </div>
          <div id="dob_year_hidden"></div>
        </div>
      </div>
      <div class="label_field_pair">
        <label class="label_for_student" for="student_gender"><%= t('status') %></label>
        <div class="student_gender_value">
          <%= f.radio_button  :is_active_equals, "true", {:checked => 'checked'} %>
          <label class="label_for_gender" for="student_gender_true"><%= t('present') %></label>
          <%= f.radio_button  :is_active_equals, "false" %>
          <label class="label_for_gender" for="student_gender_false"><%= t('former') %></label>
          <%= f.radio_button  :is_active_equals, "", {:checked => false} %>
          <label class="label_for_gender" for="student_gender_false"><%= t('all') %></label>

        </div>
      </div>


      <%= f.submit "#{t('search')}", :class=>'submit' %>
    <% end %>
  </div>
  <% unless @students.nil? %>
    <% @students= @students.to_a.sort_by{|s| s.first_name} %>
    <script type="text/javascript">
      Event.observe(window, 'load', function() { $('search-form').hide(); });
    </script>
    <div id="search-result">

      <p><%= t('searched_for') %></p>
      <div class="search-again">
  <%#= link_to_function '► Search again' do |page|
  page.visual_effect :toggle_slide, "search-form"
  page.hide "search-result"
  end %>

        <% searched_for = "#{t('listed_by')}" %>
        <% searched_for += "#{t('name')}:" + params[:search][:first_name_or_middle_name_or_last_name_like].to_s unless params[:search][:first_name_or_middle_name_or_last_name_like].empty? %>
        <% searched_for += "#{t('admission_number')}.: " + params[:search][:admission_no_equals].to_s unless params[:search][:admission_no_equals].empty? %>
        <% unless params[:advv_search][:course_id].empty? %>
          <% course = Course.find(params[:advv_search][:course_id]) %>
          <% batch = Batch.find(params[:search][:batch_id_equals]) unless (params[:search][:batch_id_equals]).blank? %>
          <% searched_for += " #{t('course')}: " + course.full_name %>
          <% searched_for += " #{t('batch')}: " + batch.full_name unless batch.nil? %>
        <% end %>
        <% searched_for += " #{t('category')}: " + StudentCategory.find(params[:search][:student_category_id_equals]).name.to_s unless params[:search][:student_category_id_equals].empty? %>
        <% unless  params[:search][:gender_equals].empty? %>
          <% if  params[:search][:gender_equals] == 'm' %>
            <% searched_for += " #{t('gender')}:#{t('male')}" %>
          <% elsif  params[:search][:gender_equals] == 'f' %>
            <% searched_for += " #{t('gender')}: #{t('female')}" %>
          <% else %>
            <% searched_for += " #{t('gender')}:#{t('all')}" %>
          <% end %>
        <% end %>
        <% searched_for += " #{t('blood_group')}: " + params[:search][:blood_group_like].to_s unless params[:search][:blood_group_like].empty? %>
        <% searched_for += " #{t('nationality')}: " + Country.find(params[:search][:nationality_id_equals]).name.to_s unless params[:search][:nationality_id_equals].empty? %>
        <% searched_for += " #{t('year_of_admission')}: " +  params[:advv_search][:doa_option].to_s + ' '+ params[:adv_search][:admission_date_year].to_s unless  params[:advv_search][:doa_option].empty? %>
        <% searched_for += " #{t('year_of_birth')}: " +  params[:advv_search][:dob_option].to_s + ' ' + params[:adv_search][:birth_date_year].to_s unless  params[:advv_search][:dob_option].empty? %>
        <% if params[:search][:is_active_equals]=="true" %>
          <% searched_for += "#{t('present_student')}" %>
        <% elsif params[:search][:is_active_equals]=="false" %>
          <% searched_for += "#{t('former_student')}" %>
        <% else %>
          <% searched_for += " #{t('all_students')}" %>
        <% end %>


        <%= link_to "►#{t('search_again')}", {:action=>"advanced_search"}%>
        <% unless @students.empty? %>
          <%= link_to "► #{t('view_pdf')}",   {:action => "advanced_search_pdf",:for =>searched_for, :result=>@students,:search=> params[:search],:status=>params[:search][:is_active_equals]}, :target => '_blank' , :class=> 'submit_button' %>
        <% end %>
      </div>
      <div class="extender"></div>
      <div class="searched_for">

        <% unless params[:search][:first_name_or_middle_name_or_last_name_like].empty? %>
          <span><%= t('name') %>:</span> <%= params[:search][:first_name_or_middle_name_or_last_name_like] %>
        <% end %>
        <% unless  params[:search][:admission_no_equals].empty? %>
          <span><%= t('admission_no') %>:</span><%= params[:search][:admission_no_equals] %>
        <% end %>
        <% unless params[:advv_search][:course_id].empty? %>
          <% course = Course.find(params[:advv_search][:course_id]) %>
          <% batch = Batch.find(params[:search][:batch_id_equals])  unless (params[:search][:batch_id_equals]).blank?%>
          <span><%= t('course_text') %>:</span> <%= course.full_name %>
          <% unless batch.nil?  %>
          <span><%= t('batch') %>: </span> <%= batch.full_name %>
          <% end %>
        <% end %>
        <% unless  params[:search][:student_category_id_equals].empty? %>
          <% category = StudentCategory.find(params[:search][:student_category_id_equals]) %>
          <span> <%= t('category') %>: </span> <%= category.name %>
        <% end %>
        <% unless  params[:search][:gender_equals].empty? %>
          <% if  params[:search][:gender_equals] == 'm' %>
            <span> <%= t('gender') %>: </span> <%= t('male') %>
          <% elsif  params[:search][:gender_equals] == 'f' %>
            <span> <%= t('gender') %>: </span> <%= t('female') %>
          <% else %>
            <span> <%= t('gender') %>: </span> <%= t('all') %>
          <% end %>
        <% end %>
        <% unless  params[:search][:blood_group_like].empty? %>
          <span> <%= t('blood_group') %>:</span> <%= params[:search][:blood_group_like] %>
        <% end %>
        <% unless  params[:search][:nationality_id_equals].empty? %>
          <% nationality = Country.find(params[:search][:nationality_id_equals]) %>
          <span> <%= t('nationality') %>: </span> <%= nationality.name %>
        <% end %>
        <% unless  params[:advv_search][:doa_option].empty? %>
          <span><%= t('year_of_admission') %>: </span> <%= params[:advv_search][:doa_option] %>

          <%= params[:adv_search][:admission_date_year] %>
        <% end %>
        <% unless  params[:advv_search][:dob_option].empty? %>
          <span><%= t('year-of_birth') %>: </span> <%= params[:advv_search][:dob_option] %>

          <%= params[:adv_search][:birth_date_year] %>
        <% end %>
        <% if params[:search][:is_active_equals]=="true" %>
          <span> <%= t('present_student') %> </span>
        <% elsif params[:search][:is_active_equals]=="false" %>
          <span> <%= t('former_student') %> </span>
        <% else %>
          <span><%= t('all') %></span>
        <% end %>

      </div>


      <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
        <% unless @students.empty? %>
          <tr class="tr-head">
            <td>
             <%= t('sl_no') %>
            </td>
            <td>
             <%= t('first_name') %>
            </td>
            <td><%= t('batch') %></td>
            <td><%= t('adm_no') %></td>

          </tr>
          <tr class="tr-blank"></tr>
          <% @students.each_with_index do |student, i| %>
            <tr class="tr-<%= cycle('odd', 'even') %>">
              <td class="col-1"><%= i+1 %></td>
              <%  if  student.is_active %>
                <td class="col-2"><%=  link_to student.full_name, :controller => 'student', :action => 'profile', :id => student.id%></td>
              <% else  %>
                <td class="col-2"><%=  link_to student.full_name, :controller => 'archived_student', :action => 'profile', :id => student.id%></td>
              <% end %>
              <td class="col-2"><%= student.batch.full_name %></td>
              <td class="col-2"><%= student.admission_no %></td>
            </tr>
          <% end %>
        <% else %>

          <tr class="tr-<%= cycle('odd', 'even') %>">
            <td class="col-2"><%= t('no_students_found') %></td>
          </tr>
        <% end %>
      </table>

      <div class="extender">




      </div>
    </div>
  <% end %>

</div>