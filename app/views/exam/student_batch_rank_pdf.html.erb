<div id="page-yield">
  <div class="hor_line"></div>

  <div class="extender"> </div>
  <div class="report">
    <div id ="main_info">
      <h3>Overall Batch Rankings : <%= @batch.name %> - <%= @batch.course.full_name %></h3>
    </div>
    <div id="pdf-info">
      <% unless @exam_groups.empty? %>
        <% exams = Exam.find_all_by_exam_group_id(@exam_groups.collect(&:id)) %>
        <% unless exams.empty? %>
          <% student_scores=[] %>
          <% ordered_scores=[] %>
          <% @students.each do|student| %>
            <% scores = ExamScore.find_all_by_student_id(student.id) %>
            <% score=0 %>
            <% unless scores.empty? %>
              <% score = scores.map{|s| s.marks}.compact.sum %>
            <% end %>
            <% student_scores << [student.id,score] %>
            <% ordered_scores << score %>
          <% end %>
          <% ordered_scores = ordered_scores.uniq.sort.reverse %>
          <% c = 'even' %>
          <table id="pdf-table" width="100%" cellspacing="0">
            <tr class="table-header">
              <td>Sl No.</td>
              <td><%= t('name') %></td>
              <td>Roll No.</td>
              <td>Rank</td>
            </tr>
            <% i = 0 %>
            <% @students.each_with_index do |student,ind| %>
              <% marks = 0 %>
              <% if i== 22 %>
                <% i= 0 %>
                <tr class="page-break"><td colspan="3"></td></tr>

                <tr class="table-header">
                  <td>Sl No.</td>
                  <td><%= t('name') %></td>
                  <td>Roll No.</td>
                  <td>Rank</td>
                </tr>

              <% end %>
              <tr class="<%= cycle(c,(["odd","even"]-[c]).first) %>">
                <td class="col-pdf"><%= i+1 %></td>
                <td class="col-pdf"><%= student.full_name %></td>
                <td class="col-pdf"><%= student.class_roll_no.present? ? student.class_roll_no : "-" %></td>
                <% student_scores.each do|student_score| %>
                  <% if student_score[0]==student.id %>
                    <% marks = student_score[1] %>
                  <% end %>
                <% end %>
                <td class="col-pdf"><%= ordered_scores.index(marks) + 1 %></td>
              </tr>
              <% i+=1 %>
            <% end %>
          </table>
        <% else %>
          <p class="flash-msg"> No exams for this Batch. </p>
        <% end %>
      <% else %>
        <p class="flash-msg"> No exams for this Batch. </p>
      <% end %>
    </div>
  </div>


</div>