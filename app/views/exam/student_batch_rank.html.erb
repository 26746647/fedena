<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('exams_text') %></h1>
  <h3>Student Ranking per Batch</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('pdf_report')}", {:controller => "exam", :action => "student_batch_rank_pdf", :batch_id=>@batch.id},:target => '_blank', :class=> 'user_button' %></li>
  </ul>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <h4>Overall Rankings : <%= @batch.name %> - <%= @batch.course.full_name %></h4>
    <div id="score-table">
      <% unless @exam_groups.empty? %>
        <% exams = Exam.find_all_by_exam_group_id(@exam_groups.collect(&:id)) %>
        <% unless exams.empty? %>
          <% student_scores=[] %>
          <% ordered_scores=[] %>
          <% @students.each do|student| %>
            <% scores = ExamScore.find_all_by_student_id(student.id) %>
            <% score=0 %>
            <% unless scores.empty? %>
              <% score = scores.map{|s| s.marks}.compact.sum %>
            <% end %>
            <% student_scores << [student.id,score] %>
            <% ordered_scores << score %>
          <% end %>
          <% ordered_scores = ordered_scores.uniq.sort.reverse %>
          <table id="listing" width="100%" cellpadding="1" cellspacing="1">
            <tr class="tr-head">
              <td>Sl No.</td>
              <td><%= t('name') %></td>
              <td>Roll No.</td>
              <td>Rank</td>
            </tr>
            <% @students.each_with_index do |student,i| %>
              <% marks = 0 %>
              <tr class="tr-<%= cycle('odd', 'even') %>">
                <td class="col-1"><%= i+1 %></td>
                <td class="col-2"><%= student.full_name %></td>
                <td class="col-1"><%= student.class_roll_no.present? ? student.class_roll_no : "-" %></td>
                <% student_scores.each do|student_score| %>
                  <% if student_score[0]==student.id %>
                    <% marks = student_score[1] %>
                  <% end %>
                <% end %>
                <td class="col-1"><%= ordered_scores.index(marks) + 1 %></td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p class="flash-msg"> No exams for this Batch. </p>
        <% end %>
      <% else %>
        <p class="flash-msg"> No exams for this Batch. </p>
      <% end %>
    </div>
    <div class="extender"></div>
  </div>
</div>
