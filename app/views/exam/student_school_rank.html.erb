<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('exams_text') %></h1>
  <h3>Student Ranking per School</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('pdf_report')}", {:controller => "exam", :action => "student_school_rank_pdf"},:target => '_blank', :class=> 'user_button' %></li>
  </ul>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <h4>Overall School Rankings : <%= Configuration.find_by_config_key("InstitutionName").config_value.present? ? Configuration.find_by_config_key("InstitutionName").config_value : "-" %></h4>
    <div id="score-table">
      <% unless @courses.empty? %>
        <% unless @students.empty? %>
          <% unless @grouped_exams.empty? %>
            <% ordered_scores = [] %>
            <% student_scores = [] %>
            <% @students.each do|student| %>
              <% score = GroupedExamReport.find_by_student_id_and_batch_id_and_score_type(student.id,student.batch_id,"c") %>
              <% marks = 0 %>
              <% unless score.nil? %>
                <% marks = score.marks %>
              <% end %>
              <% ordered_scores << marks %>
              <% student_scores << [student.id,marks] %>
            <% end %>
            <% ordered_scores = ordered_scores.compact.uniq.sort.reverse %>
            <table id="listing" width="100%" cellpadding="1" cellspacing="1">
              <tr class="tr-head">
                <td>Sl No.</td>
                <td><%= t('name') %></td>
                <td>Batch</td>
                <td>Roll No.</td>
                <td>Marks</td>
                <td>Rank</td>
              </tr>
              <% @students.each_with_index do |student,i| %>
                <tr class="tr-<%= cycle('odd', 'even') %>">
                  <td class="col-1"><%= i+1 %></td>
                  <td class="col-2"><%= student.full_name %></td>
                  <td class="col-2"><%= student.batch.full_name %></td>
                  <td class="col-1"><%= student.class_roll_no.present? ? student.class_roll_no : "-" %></td>
                  <% percentage = 0 %>
                  <% student_scores.each do|student_score| %>
                    <% if student_score[0]==student.id %>
                      <% percentage = student_score[1] %>
                    <% end %>
                  <% end %>
                  <td class="col-1"><%= percentage %></td>
                  <td class="col-1"><%= ordered_scores.index(percentage) ? ordered_scores.index(percentage) + 1 : "-" %></td>
                </tr>
              <% end %>
            </table>
          <% else %>
            <p class="flash-msg"> No Grouped Exams in this School. </p>
          <% end %>
        <% else %>
          <p class="flash-msg"> No Students in this School. </p>
        <% end %>
      <% else %>
        <p class="flash-msg"> No Courses for this School. </p>
      <% end %>
    </div>
    <div class="extender"></div>
  </div>
</div>
