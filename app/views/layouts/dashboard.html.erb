<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html dir="<%= (rtl?) ? 'rtl' : 'ltr' %>">
  <head>
    <% @direction = (rtl?) ? 'rtl/' : '' %>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/> 
    <title><%= @title %></title>
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/ico" />

    <%= stylesheet_link_tag([@direction+'_layouts/dashboard', @direction+'_styles/ui.all'])%>
    <%= stylesheet_link_tag(*get_stylesheets) %>
    <%= stylesheet_link_tag @direction+'modalbox' %>

    <%= javascript_include_tag :defaults, :cache => 'cache/javascripts/all' %>
    <%= javascript_include_tag 'scripts/anylinkmenu', 'scripts/nicetitle', 'droplicious' %>
    <%= javascript_include_tag "fckeditor/fckeditor" %>
    <%= javascript_include_tag 'prototype' %>
    <%= javascript_include_tag 'builder' %>
    <%= javascript_include_tag 'modalbox' %>

    <script type="text/javascript">
      /***********************************************
       * Dynamic Countdown script- © Dynamic Drive (http://www.dynamicdrive.com)
       * This notice MUST stay intact for legal use
       * Visit http://www.dynamicdrive.com/ for this script and 100s more.
       ***********************************************/
      var anylinkmenu1={divclass:'anylinkmenu', inlinestyle:'', linktarget:''} //First menu variable. Make sure "anylinkmenu1" is a unique name!
      anylinkmenu1.items = [
<% if @current_user.admin %>
      ["<%= t('calendar_text') %>", "/calendar"],
      ["<%= t('examination') %>", "/exam"],
      ["<%= t('news_text') %>", "/news"],
      ["<%= t('event_creations') %>", "/event"],
      ["<%= t('human_resource') %>", "/employee/hr"],
      ["<%= t('finance_text') %>", "/finance/index"],
      ["<%= t('user_text') %>", "/user"],
<% end %>
<%  if @current_user.student? || @current_user.employee? %>
      ["<%= t('calendar_text') %>", "/calendar"],
<% end %>
<% FedenaPlugin::AVAILABLE_MODULES.each do |mod| %>
  <% unless mod[:more_menu].blank? %>
    <%= "['#{t("#{mod[:more_menu][:title]}")}','/#{mod[:more_menu][:controller]}/#{mod[:more_menu][:action].gsub("index","")}'],"  if permitted_to? "#{mod[:more_menu][:action]}".to_sym,"#{mod[:more_menu][:controller]}".to_sym  %>
  <% end %>
<% end %>
  ]
  anylinkmenu.init("menuanchorclass");
    </script>
  </head>

  <body>
    <div id="header_bg">
      <div id="header">
        <div id="outer-header-link">
          <div id="header_link" >
            <%= t('logged_as') %>
            <% this_user = User.find(session[:user_id]) if session[:user_id] %>
            <%= link_to this_user.first_name, :controller => 'user', :action => 'profile',
              :id => this_user.username %> &nbsp;|&nbsp;
            <%= link_to t('messages'), :controller => "reminder", :action => "index" %>(<%= render  :partial => 'layouts/reminder_count' %>)&nbsp;|&nbsp;
            <%= link_to t('log_out'), :controller => 'user', :action => 'logout' %>  &nbsp;&nbsp;
          </div>
        </div>
        <div id="main-menu">
          <%= link_to "#{t('dashboard_text')}", :controller => "user", :action => "dashboard" %>
          <% this_user = User.find(session[:user_id]) if session[:user_id] %>
          <%= link_to "#{t('students')}", :controller => "student", :action => "index" \
            if this_user.admin? %>
          <%= link_to "#{t('attendance')}", :controller => "student_attendance", :action => "index" \
            if this_user.admin? %>
          <%= link_to "#{t('settings')}", :controller => "configuration", :action => "index" \
            if this_user.admin? %> <!--
          <%= link_to "#{t('news_text')}", :controller => "news", :action => "index" \
            if this_user.admin? %> -->
          <%= link_to "#{t('timetable_text')}", :controller => "timetable", :action => "index" \
            if this_user.admin? %>
           <% FedenaPlugin::AVAILABLE_MODULES.each do |mod| %>
             <% unless mod[:top_bar].blank? %>
               <% if permitted_to? "#{mod[:top_bar][:action]}".to_sym,"#{mod[:top_bar][:controller]}".to_sym %>
                 <%= link_to "#{t(mod[:top_bar][:title])}", {:controller => "#{mod[:top_bar][:controller]}", :action => "#{mod[:top_bar][:action]}"} %>
               <% end %>
             <% end %>
           <% end %>
            <a href="#" class="menuanchorclass" rel="anylinkmenu1"><%= t('more') %> ▼</a>
        </div>
      </div>
    </div>

    <div id="content_wrapper" >
      <div id="side_bar">
        <div id="fedena_logo">
          <% if FileTest.exists?("#{RAILS_ROOT}/public/uploads/image/institute_logo.jpg") %>
            <%= image_tag  "/uploads/image/institute_logo.jpg" ,:width => "155",  :height=>"107" %>
          <% else %>

            <div class="fed_logo">
              <img src="/images/application/app_fedena_logo.jpg"/>
            </div>
          <% end %>
        </div>
        <div id="sidebar_news_area">
          <% if action_name == "dashboard" %>
            <%= link_to "#{t('news_text')}", { :controller => "news", :action => "index" }, :id => 'news_feed_top_img' %>
            <div id="news_feed">
              <% @dash_news.each do |n| %>
                <div class="sidebar_news_item<%= cycle("0", "1") %>">
                  <h5><%= link_to n.title, :controller => 'news', :action => 'view', :id => n.id %></h5>
                  <small><%= time_ago_in_words(n.created_at)  %> <%= t('ago') %> </small>
                </div>
              <% end %>
            </div>
            <div class="extender"> </div>
            <%= link_to "#{t('more_news')}", {:controller => "news", :action => "all"}, :id => "bottom_read_more" %>
          </div>
        <% end %>
      </div>
      <div id="content"> <%= yield %> </div>

      <div class="extender"></div>
    </div>

    <div id="footer">
      <div id="footer_logo">
        <div id="powered_by">
          <%= t('powered_by') %> <a href="http://www.projectfedena.org/" target="_blank">Fedena</a>
        </div>
        <a href="http://www.projectfedena.org/"  target="_blank" class="footer-logo"></a>
      </div>
    </div>
  </body>
</html>
