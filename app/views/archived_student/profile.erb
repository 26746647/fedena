<div id="content-header">
  <img src="/images/student_details/student_details_logo.jpg" />
  <h1><%= t('student.student_info') %></h1>
  <h3><%= t('student.student_profile') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>

    <li><%= link_to "#{t('student.reports')}", :controller => 'archived_student',
        :action => 'reports', :id => @archived_student %></li>


    <li><%= link_to "#{t('student.profile.guardians')}", :controller => "archived_student",
        :action => "guardians", :id => @archived_student.id %></li>


<%#*<li><%= link_to "Delete", :controller => 'archived_student',%>
<%#*:action => 'delete', :id => @archived_student.id %><%#</li>%>
    <li><%= link_to "#{t('student.generate_tc')}",
        {:controller => "student", :action => "generate_tc_pdf", :id => @archived_student.admission_no},:target => '_blank' %></li>

  </ul>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <div id="student_profile_heading">

    <div id="profile_picture_display">
      <% if @archived_student.photo.file? %>
        <%= image_tag @archived_student.photo.url %>
      <% else %>
        <%= image_tag "master_student/profile/default_student.png" %>
      <% end %>
    </div>

    <div id ="student_main_info">
      <h3> <%= @archived_student.full_name %>  </h3>
      <h4> <%= t('course_and_batch') %> : <%= @archived_student.batch.course_name %> </h4>
      <h4> <%= t('adm_no') %>. : <%= @archived_student.admission_no %> </h4>
    </div>

    <div class="extender"> </div>

  </div>

  <div id="new_profile_info_top">
    <div class="profile_top_banner"><%= image_tag "master_student/profile/topbanner.png" %></div>
    <table width="700">
      <tr class="odd left"><td>Admission Date</td><td class="right"><%= @archived_student.admission_date.strftime("%d %b, %Y") unless @archived_student.admission_date.nil? %></td></tr>
      <tr class="even left"><td>Date of birth</td><td class="right"><%= @archived_student.date_of_birth.strftime("%d %b, %Y") unless @archived_student.date_of_birth.nil? %></td></tr>
      <tr class="odd left"><td>Blood group</td><td class="right"><%= @archived_student.blood_group %></td></tr>
      <tr class="even left"><td>Gender</td><td class="right"><%= @archived_student.gender_as_text %></td></tr>
      <tr class="odd left"><td>Nationality</td><td class="right"><%= @archived_student.nationality.name unless @archived_student.nationality_id.nil? %></td></tr>
      <tr class="even left"><td>Language</td><td class="right"><%= @archived_student.language %></td></tr>
      <tr class="odd left"><td>Category</td><td class="right"><%= @archived_student.student_category.name unless @archived_student.student_category.nil? %></td></tr>
      <tr class="even left"><td>Religion</td><td class="right"><%= @archived_student.religion %></td></tr>
      <tr class="odd left"><td>Address</td><td class="right"><%= @archived_student.address_line1%>, <%=  @archived_student.address_line2 %></td></tr>
      <tr class="even left"><td>City</td><td class="right"><%= @archived_student.city %></td></tr>
      <tr class="odd left"><td>State</td><td class="right"><%= @archived_student.state %></td></tr>
      <tr class="even left"><td>Country</td><td class="right"><%= @archived_student.country.name unless @archived_student.country_id.nil? %></td></tr>
      <tr class="odd left"><td>Phone</td><td class="right"><%= @archived_student.phone1 %></td></tr>
      <tr class="even left"><td>Mobile</td><td class="right"><%= @archived_student.phone2 %></td></tr>
      <tr class="odd left"><td>Email</td><td class="right"><%= @archived_student.email %></td></tr>
      <tr class="even left"><td>Reason for leaving</td><td class="right"><%= @archived_student.status_description %></td></tr>
    </table>
    <div class="extender"></div>
  </div>


</div>
