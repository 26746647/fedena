<div class="label-field-pair"><label>
  <%= t('student_attendance.student.select_month_and_year') %> :
</label>
<div class="text-input-bg2">
<%= select :month, :id,
  [["#{t('layouts.common.jan')}",'01'], ["#{t('layouts.common.feb')}",'02'], ["#{t('layouts.common.mar')}",'03'], ["#{t('layouts.common.apr')}",'04'], ["#{t('layouts.common.may')}",'05'], ["#{t('layouts.common.jun')}",'06'], ["#{t('layouts.common.jul')}",'07'], ["#{t('layouts.common.aug')}",'08'], ["#{t('layouts.common.sept')}",'09'], ["#{t('layouts.common.oct')}",'10'], ["#{t('layouts.common.nov')}",'11'], ["#{t('layouts.common.dec')}",'12']],
  {:prompt => "#{t('index.select_a_month')}"},
  {:onchange => "#{remote_function(
  :url => { :action => 'year' },
  :with => "'month='+value+'&batch_id='+#{@batch.id}+'&subject_id='+#{@subject}",
  :before => "Element.show('loader')",
  :success => "Element.hide('loader')"  )}"} %>
</div>
<div id="year"><%= render :partial => 'year' %></div></div>
